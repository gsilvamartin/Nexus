# NEXUS Communication Environment Variables
# Copie este arquivo para .env e configure suas variáveis

# =============================================================================
# SLACK CONFIGURATION
# =============================================================================

# Habilitar integração com Slack
SLACK_ENABLED=false

# Token do bot Slack (obrigatório se SLACK_ENABLED=true)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Token da aplicação Slack (opcional, para Socket Mode)
SLACK_APP_TOKEN=xapp-your-app-token-here

# Secret de assinatura Slack (opcional, para verificação de eventos)
SLACK_SIGNING_SECRET=your-signing-secret-here

# Canais do Slack (separados por vírgula)
SLACK_CHANNELS=C1234567890,C0987654321

# Canal padrão do Slack
SLACK_DEFAULT_CHANNEL=C1234567890

# Usuários administradores do Slack (separados por vírgula)
SLACK_ADMIN_USERS=U1234567890,U0987654321

# =============================================================================
# DISCORD CONFIGURATION
# =============================================================================

# Habilitar integração com Discord
DISCORD_ENABLED=false

# Token do bot Discord (obrigatório se DISCORD_ENABLED=true)
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# ID do servidor Discord
DISCORD_GUILD_ID=123456789012345678

# Canais do Discord (separados por vírgula)
DISCORD_CHANNELS=123456789012345678,987654321098765432

# Canal padrão do Discord
DISCORD_DEFAULT_CHANNEL=123456789012345678

# ID da role de administrador do Discord
DISCORD_ADMIN_ROLE_ID=123456789012345678

# Roles permitidas do Discord (separadas por vírgula)
DISCORD_ALLOWED_ROLES=123456789012345678,987654321098765432

# Usuários permitidos do Discord (separados por vírgula)
DISCORD_ALLOWED_USERS=123456789012345678,987654321098765432

# =============================================================================
# CONFIGURAÇÕES GERAIS
# =============================================================================

# Habilitar comunicação entre plataformas
ENABLE_CROSS_PLATFORM=true

# Timeout para mensagens (segundos)
MESSAGE_TIMEOUT=30.0

# Tentativas de retry
RETRY_ATTEMPTS=3

# Delay entre tentativas (segundos)
RETRY_DELAY=1.0

# =============================================================================
# LOGGING
# =============================================================================

# Log de mensagens
LOG_MESSAGES=true

# Log de comandos
LOG_COMMANDS=true

# Log de erros
LOG_ERRORS=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Habilitar rate limiting
RATE_LIMIT_ENABLED=true

# Limite por minuto
RATE_LIMIT_PER_MINUTE=60

# Limite por hora
RATE_LIMIT_PER_HOUR=1000
