# NEXUS Configuration Template

# =============================================================================
# API Keys for AI Models
# =============================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://nexus_user:nexus_password@localhost:5432/nexus_db
REDIS_URL=redis://localhost:6379/0
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# =============================================================================
# Compute Cluster Configuration
# =============================================================================
GPU_CLUSTER_ENDPOINT=https://gpu-cluster.nexus.internal
CPU_CLUSTER_ENDPOINT=https://cpu-cluster.nexus.internal
MEMORY_CLUSTER_ENDPOINT=https://memory-cluster.nexus.internal

# Kubernetes Configuration
KUBE_CONFIG_PATH=~/.kube/config
KUBE_NAMESPACE=nexus-system

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_super_secret_key_change_this_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# Storage Configuration
# =============================================================================
# Object Storage (S3-compatible)
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
S3_BUCKET_NAME=nexus-storage
S3_REGION=us-west-2

# Vector Storage
VECTOR_DB_URL=http://localhost:8080
VECTOR_DB_API_KEY=your_vector_db_api_key

# =============================================================================
# Monitoring and Observability
# =============================================================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
JAEGER_URL=http://localhost:14268
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Multi-tenancy
ENABLE_MULTI_TENANCY=true
DEFAULT_TENANT_ID=default

# =============================================================================
# Performance Configuration
# =============================================================================
# Worker Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=4

# Model Configuration
MAX_CONCURRENT_MODELS=10
MODEL_CACHE_SIZE_GB=50
ENABLE_MODEL_QUANTIZATION=true

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_CAUSAL_REASONING=true
ENABLE_EPISODIC_MEMORY=true
ENABLE_QUANTUM_OPTIMIZATION=false
ENABLE_NEUROMORPHIC_LEARNING=true
ENABLE_SELF_MODIFICATION=false

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100

# =============================================================================
# Cloud Provider Configuration
# =============================================================================
# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# Google Cloud
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Azure
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# =============================================================================
# Development Configuration
# =============================================================================
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false
MOCK_EXTERNAL_APIS=false
